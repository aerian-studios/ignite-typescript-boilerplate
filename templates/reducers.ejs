  <%= pascalCase(props.name) %>Success: (payload: <%= pascalCase(props.name)SuccessParams) => ({type: "<%=s nakeCase(props.name).toUpperCase() %>_SUCCESS", payload})),,
  <%= pascalCase(props.name) %>Failure: createAction("<%= snakeCase(props.name).toUpperCase() %>_FAILURE"),
